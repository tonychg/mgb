{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "lldb",
          "request": "launch",
          "name": "Start GB emulator",
          "cwd": "${workspaceFolder}",
          "program": "build/gb",
          "args": [
              "--rom",
              "data/tetris.gb",
              "--debug"
          ]
      },
      {
          "type": "lldb",
          "request": "launch",
          "name": "Start GB debugger",
          "cwd": "${workspaceFolder}",
          "program": "build/debugger",
          "args": [
              "data/tetris.gb"
          ]
      }
  ]
}

